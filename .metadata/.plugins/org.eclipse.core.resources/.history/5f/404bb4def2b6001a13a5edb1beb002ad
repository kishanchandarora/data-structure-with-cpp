void inToPre(char *input) {
	int len = strlen(input);
	strrev(input);

	for(int i=0; i<len; i++) {
		if(input[i] == '(') {
			input[i] = ')';
			i++;
		}
		else if(input[i] == ')') {
			input[i] = '(';
			i++;
		}
	}
	inToPost(input);
	strrev(str);
}
int main() {
	 char input[] = "a*b/c*d+e*f-g/h";
	 inToPost(input);
	 cout<<str<<endl;

	// cout<<inToPre(input)<<endl;


	return 0;
}


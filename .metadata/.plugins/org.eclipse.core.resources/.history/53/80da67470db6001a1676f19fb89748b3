#include <iostream>
using namespace std;

class LinkedList;

class Node {
	int element;
	Node *next;


public:
	Node() {
	element = 0;
	next = NULL;
	}

	Node(int element) {
	this->element = element;
	next = NULL;
	}

	friend class LinkedList;
};


class LinkedList {
	Node *head;

public:
	LinkedList() {
		head = NULL;
	}





};




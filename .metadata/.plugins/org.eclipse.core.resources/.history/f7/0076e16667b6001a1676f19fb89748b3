#include <iostream>
#include <stack>
using namespace std;

int isOperand(char input) {
	if(input>=65 && input<=90 || input>=97 && input<=122)
		return 1;
	return 0;
}

int calculate(int op1, int op2, char opr)
{
	switch(opr)
	{
	case '+': return ( op1 + op2 );
	case '-': return ( op1 - op2 );
	case '*': return ( op1 * op2 );
	case '/': return ( op1 / op2 );
	case '%': return ( op1 % op2 );
	}
}

int postfixEvaluation(char *input) {
	int i, res;
	stack<char> s;
	cout<<"ksdjfklsdjflksdrerersdfsdfsdfsdfsdf";
	for(i=0; input[i]!='\0'; i++) {
		if(isOperand(input[i])) {
			s.push(input[i]);
		}
		else {

			int op1 = s.top(); s.pop();
			int op2 = s.top(); s.pop();
			res = calculate(op1, op2, input[i]);
			s.push(res);
		}
	}
	cout<<"skdjflksdjfklsd";

	res = s.top();
	s.pop();
	return res;
}

int main() {
	char input[] = "46*38/7*+6-";
	cout<<postfixEvaluation(input)<<endl;;
	return 0;
}
